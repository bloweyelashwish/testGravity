{% macro HeaderBlock() %}
	{% set header = {
		logo: '@img/icons/logo.svg'
		}
	%}

	{% set menu = [{title: 'home', link: '#home'}, {title: 'services', link: '#services'}, {title: 'works', link: '#works'}, {title: 'testimonials', link: '#testimonials'}] %}

	<header class="header">
		<div class="header__container container flex">
			<a class="header__logo">
				<img src="{{ header.logo }}" alt="logo">
			</a>
			<div class="header__search-bar" data-search-header="data-search-header">
				<div class="search-bar search-bar--desktop" data-search>
					<input type="text" class="search-bar__input" placeholder="Type to search..." aria-label="search" data-search-input>
					<button class="search-bar__submit" aria-label="submit search" data-search-submit>
						<img src="@img/icons/search-icon.svg" alt="Search icon" height="20" width="20">
					</button>
				</div>
			</div>
			<div class="header__nav-toggle">
				<button class="nav-toggle" data-nav-toggle="data-nav-toggle">
					{% for line in[1, 2] %}
						<span class="nav-toggle__line"></span>
					{% endfor %}
				</button>
			</div>
			<div class="header__navigation" aria-hidden='true' data-menu="data-menu">
				<nav class="navigation">
					<ul class="navigation__list flex">
						{% for item in menu %}
							<li class="navigation__item">
								<a href="{{ item.link }}" class="navigation__link">{{ item.title }}</a>
							</li>
						{% endfor %}
						<div class="navigation_search-bar search-bar search-bar--mobile" data-search>
							<input type="text" class="search-bar__input" placeholder="Type to search..." aria-label="search" data-search-input>
							<button class="search-bar__submit" aria-label="submit search" data-search-submit>
								<img src="@img/icons/search-icon.svg" alt="Search icon" height="20" width="20">
							</button>
						</div>
					</ul>
				</nav>
			</div>
		</div>
	</header>
{% endmacro %}