	title: 'We love work hard and explore new things thatâ€™s why we cover lot of things. Check our service list and view details',
	subtitle: 'services',
	menu: {
		links: [
			{
				name: 'Multimedia',
				href: '#'
			},
			{
				name: 'Creative Strategy',
				href: '#'
			},
			{
				name: 'Interactive design',
				href: '#'
			},
			{
				name: 'UI/UX',
				href: '#'
			},
			{
				name: 'Packaging',
				href: '#'
			},
			{
				name: 'Coding',
				href: '#'
			},
			{
				name: 'Branding',
				href: '#'
			}
		]
	},
	slider: {
		settings: {
			infinite: false,
			arrows: true,
			slidesToShow: 1.3,
			slidesToScroll: 1,		
			prevArrow: '.js-prev-services',
			nextArrow: '.js-next-services',
			cssEase: 'ease-out',
			speed: 650,
			responsive: [{
				breakpoint: 700,
				settings: {
					slidesToShow: 1,
					slidesToScroll: 1
				}
			}]
		},
		slides: [
			{
				image: '@img/slide.jpg'
