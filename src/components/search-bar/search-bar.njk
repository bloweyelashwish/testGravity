{% macro SearchBar(settings) %}
<div class="search-bar {{ settings.className }} js-search-bar">
	<input type="text" class="search-bar__input js-search-bar-input" placeholder="Type to search..." aria-label="search">
	<button class="search-bar__submit js-search-bar-submit" aria-label="submit search">
		<img src="@img/icons/search-icon.svg" alt="Search icon" height="20" width="20">
	</button>
</div>	
{% endmacro %}