{% from '../button/button.njk' import Btn %}

{% set DEFAULT_FORM_SETTINGS = {
	jsClass: '',
	styleClass: ''
} %}


{% macro FormModal() %}
	{% call FormContent({
		jsClass: 'js-sign-up'
	}) %}
		<div class="form__registration js-sign-up">
			<h3 class="form__title">Sign Up</h3>
			<div class="form__group">
				<label class="form__label js-form-label" for="firstName">first name</label>
				<input class="form__input" type="text" name="firstName" id="firstName" autocomplete="off" required>
			</div>
			<div class="form__group">
				<label class="form__label js-form-label" for="lastName">last name</label>
				<input class="form__input" type="text" name="lastName" id="lastName" autocomplete="off" required>
			</div>
			<div class="form__group">
				<label class="form__label js-form-label" for="registration-email">email</label>
				<input class="form__input" type="email" name="email" id="registration-email" autocomplete="off" required>
			</div>
			<div class="form__group">
				<label class="form__label js-form-label" for="registration-password">enter your password</label>
				<input class="form__input" type="password" name="password" id="registration-password" autocomplete="off" required>
			</div>
			<div class="form__group">
				<label class="form__label js-form-label" for="registration-password2">confirm your password</label>
				<input class="form__input" type="password" name="password2" id="registration-password2" autocomplete="off" required>
			</div>
			<div class="form__button">
			{{ Btn({
					type: 'submit', 
					className: 'btn--primary', 
					text: 'Get Started'
				}) }}
			</div>
		</div>
	{% endcall %}
	{% call FormContent({ 
			jsClass: 'js-log-in',
	 		styleClass: 'is-disabled' 
		}) %}
		<div class="form__log-in">
			<h3 class="form__title">Log In</h3>		
			<div class="form__group">
				<label class="form__label js-form-label" for="email">email</label>
				<input class="form__input" type="email" name="email" id="email" autocomplete="off" required>
			</div>
			<div class="form__group">
				<label class="form__label js-form-label" for="password">enter your password</label>
				<input class="form__input" type="password" name="password" id="password" autocomplete="off" required>
			</div>
			<div class="form__button">
			{{ Btn({
					type: 'submit', 
					className: 'btn--primary', 
					text: 'Log In'
				}) }}
			</div>
		</div>
	{% endcall %}
{% endmacro %} 

{% macro FormContent(settings = {}) %}
	{% set settings = merge(DEFAULT_FORM_SETTINGS, settings) %}
	<form action="https://httpbin.org/post" class="form {{ settings.jsClass }} {{ settings.styleClass }} js-form" method="POST">
	{{ caller() }}
	</form>
{% endmacro %}