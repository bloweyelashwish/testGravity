{% macro SectionMenu(settings = {}) %}
{% set settings = merge(DEFAULT_MENU_SETTINGS, settings) %}
	<ul class="section-menu {{ settings.className }}">
		{% for link in settings.menuItems %}
			<li class="section-menu__item"><a class="section-menu__link" href="{{ link.href }}">{{ link.name }}</a></li>
		{% endfor %}
	</ul>
{% endmacro %}